---
const navLinks = [
  { text: "Instant Intake", href: "#instant-intake" },
  { text: "Decision Support", href: "#decision-support" },
  { text: "Research Assistant", href: "#research" },
  { text: "Contact", href: "#contact" },
];
---

<nav class="nav">
  <div class="container nav-content">
    <a href="/" class="logo">
      <img src="/images/logo.png" alt="Curnexa" height="40" />
      <span class="logo-text">Curnexa</span>
    </a>
    <div class="nav-links">
      {navLinks.map(link => (
        <a href={link.href}>{link.text}</a>
      ))}
      <a href="https://app.curnexa.com/login" class="btn btn-outline">Login</a>
      <a href="https://app.curnexa.com/" class="btn btn-primary">Sign Up</a>
    </div>
  </div>
</nav>

<style>
  .nav {
    padding: 1rem 0;
    background: white;
    border-bottom: 1px solid #eee;
    position: fixed;
    width: 100%;
    z-index: 1000;
  }

  .nav-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .nav-links a:not(.btn) {
    color: var(--text-color);
    text-decoration: none;
    font-weight: 500;
  }

  .nav-links a:hover:not(.btn) {
    color: var(--primary-color);
    text-shadow: 0 0 20px rgba(80, 185, 198, 0.3);
  }

  @media (max-width: 768px) {
    .nav-links {
      display: none;
    }
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
  }

  .logo img {
    height: 40px;
    width: auto;
    object-fit: contain;
  }

  .logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-color);
    background: linear-gradient(135deg, #333 0%, #50B9C6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  @media (max-width: 768px) {
    .nav-links {
      display: none;
    }
    
    .logo-text {
      font-size: 1.25rem;
    }
  }
</style>