---
const navLinks = [
  { text: "Instant Intake", href: "#instant-intake" },
  { text: "Decision Support", href: "#decision-support" },
  { text: "Research Assistant", href: "#research" },
  { text: "Contact", href: "#contact" },
];
---

<nav class="nav">
  <div class="container nav-content">
    <a href="/" class="logo">
      <img src="/images/logo.png" alt="Curnexa" height="40" />
      <span class="logo-text">Curnexa</span>
    </a>
    <button class="hamburger" aria-label="Menu">
      <span></span>
      <span></span>
      <span></span>
    </button>
    <div class="nav-links">
      {navLinks.map(link => (
        <a href={link.href}>{link.text}</a>
      ))}
      <a href="https://app.curnexa.com/login" class="btn btn-outline">Login</a>
      <a href="https://app.curnexa.com/" class="btn btn-primary">Sign Up</a>
    </div>
  </div>
</nav>

<style>
  .nav {
    padding: 1rem 0;
    background: white;
    border-bottom: 1px solid #eee;
    position: fixed;
    width: 100%;
    z-index: 1000;
  }

  .nav-content {
    display: flex;
    justify-content: space-between;
    align-items: center;
  }

  .nav-links {
    display: flex;
    gap: 2rem;
    align-items: center;
  }

  .nav-links a:not(.btn) {
    color: var(--text-color);
    text-decoration: none;
    font-weight: 500;
  }

  .nav-links a:hover:not(.btn) {
    color: var(--primary-color);
    text-shadow: 0 0 20px rgba(80, 185, 198, 0.3);
  }

  @media (max-width: 768px) {
    .nav-links {
      display: none;
    }
  }

  .logo {
    display: flex;
    align-items: center;
    gap: 0.75rem;
    text-decoration: none;
  }

  .logo img {
    height: 40px;
    width: auto;
    object-fit: contain;
  }

  .logo-text {
    font-size: 1.5rem;
    font-weight: 700;
    color: var(--text-color);
    background: linear-gradient(135deg, #333 0%, #50B9C6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
  }

  @media (max-width: 768px) {
    .nav-links {
      display: none;
    }
    
    .logo-text {
      font-size: 1.25rem;
    }
  }

  .hamburger {
    display: none;
    flex-direction: column;
    justify-content: space-around;
    width: 2rem;
    height: 2rem;
    background: transparent;
    border: none;
    cursor: pointer;
    padding: 0;
    z-index: 10;
  }

  .hamburger span {
    width: 2rem;
    height: 0.25rem;
    background: var(--text-color);
    border-radius: 10px;
    transition: all 0.3s linear;
    position: relative;
    transform-origin: 1px;
  }

  @media (max-width: 768px) {
    .hamburger {
      display: flex;
    }

    .nav-links {
      display: flex;
      flex-direction: column;
      position: fixed;
      top: 0;
      right: -100%;
      height: 100vh;
      width: 100%;
      background: white;
      padding: 6rem 2rem 2rem;
      transition: right 0.3s ease;
      align-items: center;
      gap: 2rem;
      z-index: 100;
    }

    .nav-links.active {
      right: 0;
    }

    .nav-links a {
      font-size: 1.2rem;
    }

    .nav-links .btn {
      width: 100%;
      text-align: center;
    }

    .hamburger span {
      display: block;
      width: 2rem;
      height: 0.25rem;
      background: var(--text-color);
      margin: 0.25rem 0;
      transition: all 0.3s ease;
    }

    .hamburger.active span:nth-child(1) {
      transform: rotate(45deg) translate(5px, 5px);
    }

    .hamburger.active span:nth-child(2) {
      opacity: 0;
    }

    .hamburger.active span:nth-child(3) {
      transform: rotate(-45deg) translate(7px, -6px);
    }
  }
</style>

<script>
  const hamburger = document.querySelector('.hamburger');
  const navLinks = document.querySelector('.nav-links');

  hamburger?.addEventListener('click', () => {
    hamburger.classList.toggle('active');
    navLinks?.classList.toggle('active');
    document.body.style.overflow = navLinks?.classList.contains('active') ? 'hidden' : '';
  });

  // Close menu when clicking a link
  const links = document.querySelectorAll('.nav-links a');
  links.forEach(link => {
    link.addEventListener('click', () => {
      navLinks?.classList.remove('active');
      document.body.style.overflow = '';
    });
  });
</script>