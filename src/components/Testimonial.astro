---
const testimonial = {
  quote: "Curnexa has revolutionized our emergency department's workflow. The AI-powered system has significantly reduced our documentation time and improved our decision-making process.",
  author: "Dr. Sarah Chen",
  title: "Emergency Department Director",
  organization: "UC Medical Center",
  image: "/images/uc-medical-center-logo.png"
};
---

<section class="testimonial">
  <div class="container">
    <blockquote>
      <p>{testimonial.quote}</p>
      <cite>
        <div class="author-info">
          <strong>{testimonial.author}</strong>
          <span>{testimonial.title}</span>
          <img src={testimonial.image} alt={testimonial.organization} />
        </div>
      </cite>
    </blockquote>
  </div>
</section>

<style>
  .testimonial {
    padding: 6rem 0;
    background: var(--background-light);
    text-align: center;
  }

  blockquote {
    max-width: 800px;
    margin: 0 auto;
  }

  blockquote p {
    font-size: 1.5rem;
    line-height: 1.6;
    color: var(--text-color);
    font-style: italic;
    margin-bottom: 2rem;
  }

  .author-info {
    display: flex;
    flex-direction: column;
    align-items: center;
    gap: 0.5rem;
  }

  .author-info strong {
    font-size: 1.1rem;
    color: var(--text-color);
  }

  .author-info span {
    color: #666;
  }

  .author-info img {
    margin-top: 1rem;
    height: 40px;
    width: auto;
  }

  @media (max-width: 768px) {
    .testimonial {
      padding: 4rem 0;
    }

    blockquote p {
      font-size: 1.2rem;
    }
  }
</style>
