<section class="hero">
  <div class="hero-background">
    <canvas id="heroCanvas"></canvas>
  </div>
  <div class="container split-layout">
    <div class="hero-content">
      <h1>The Right Patient<br>Data. Faster.</h1>
      <p>No more sifting through Epic Charts. Curnexa is the fastest way to retrieve and analyze patient data.</p>
      <a href="https://app.curnexa.com/" class="btn btn-primary">Sign up with Epic</a>
    </div>
    <div class="animation-container"></div>
  </div>
</section>

<script>
  interface ParticleProps {
    x: number;
    y: number;
    size: number;
    speedX: number;
    speedY: number;
    color: string;
    alpha: number;
    canvas: HTMLCanvasElement;
  }

  class Particle implements ParticleProps {
    x: number;
    y: number;
    size: number;
    speedX: number;
    speedY: number;
    color: string;
    alpha: number;
    canvas: HTMLCanvasElement;

    constructor(x: number, y: number, canvas: HTMLCanvasElement) {
      this.x = x;
      this.y = y;
      this.canvas = canvas;
      this.size = Math.random() * 3 + 1;
      this.speedX = Math.random() * 2 - 1;
      this.speedY = Math.random() * 2 - 1;
      this.color = '#50B9C6';
      this.alpha = Math.random() * 0.7 + 0.3;
    }

    update(): void {
      this.x += this.speedX;
      this.y += this.speedY;

      if (this.size > 0.2) this.size -= 0.01;

      if (this.x < 0 || this.x > this.canvas.width) this.speedX *= -1;
      if (this.y < 0 || this.y > this.canvas.height) this.speedY *= -1;
    }

    draw(ctx: CanvasRenderingContext2D): void {
      ctx.save();
      ctx.globalAlpha = this.alpha;
      ctx.fillStyle = this.color;
      ctx.beginPath();
      ctx.arc(this.x, this.y, this.size, 0, Math.PI * 2);
      ctx.fill();
      ctx.restore();
    }
  }

  function initCanvas(): void {
    const canvas = document.querySelector('#heroCanvas') as HTMLCanvasElement;
    if (!canvas) return;

    const ctx = canvas.getContext('2d');
    if (!ctx) return;

    const particles: Particle[] = [];
    let angle = 0;
    const radius = 150;
    const centerX = window.innerWidth * 0.75; // Position on right side
    const centerY = window.innerHeight * 0.5;

    function resizeCanvas(): void {
      canvas.width = window.innerWidth;
      canvas.height = window.innerHeight; // Full height
    }

    function createParticles(): void {
      for (let i = 0; i < 100; i++) {
        particles.push(
          new Particle(
            Math.random() * canvas.width * 0.5 + canvas.width * 0.5, // Only on right side
            Math.random() * canvas.height,
            canvas
          )
        );
      }
    }

    function connectParticles(context: CanvasRenderingContext2D): void {
      for (let i = 0; i < particles.length; i++) {
        for (let j = i; j < particles.length; j++) {
          const dx = particles[i].x - particles[j].x;
          const dy = particles[i].y - particles[j].y;
          const distance = Math.sqrt(dx * dx + dy * dy);

          if (distance < 150) {
            const opacity = 0.3 - distance/150;
            context.beginPath();
            context.strokeStyle = `rgba(80, 185, 198, ${opacity})`;
            context.lineWidth = 2 - distance/150;
            context.moveTo(particles[i].x, particles[i].y);
            context.lineTo(particles[j].x, particles[j].y);
            context.stroke();
          }
        }
      }
    }

    let mouse = { x: null as number | null, y: null as number | null };
    
    canvas.addEventListener('mousemove', (event) => {
      mouse.x = event.x;
      mouse.y = event.y;
      
      for (let i = 0; i < 3; i++) {
        particles.push(
          new Particle(
            mouse.x,
            mouse.y,
            canvas
          )
        );
        if (particles.length > 200) particles.shift();
      }
    });

    function animate(): void {
      if (!ctx) return;
      
      ctx.clearRect(0, 0, canvas.width, canvas.height);
      
      // Add circular motion
      angle += 0.002;
      const x = centerX + Math.cos(angle) * radius;
      const y = centerY + Math.sin(angle) * radius;
      
      // Add particles at the circular motion point
      for (let i = 0; i < 2; i++) {
        particles.push(
          new Particle(x, y, canvas)
        );
        if (particles.length > 150) particles.shift();
      }
      
      particles.forEach(particle => {
        particle.update();
        particle.draw(ctx);
      });

      connectParticles(ctx);
      requestAnimationFrame(animate);
    }

    window.addEventListener('resize', resizeCanvas);
    resizeCanvas();
    createParticles();
    animate();
  }

  // Wait for the DOM to be fully loaded
  if (document.readyState === 'loading') {
    document.addEventListener('DOMContentLoaded', initCanvas);
  } else {
    initCanvas();
  }
</script>

<style>
  .hero {
    position: relative;
    background: linear-gradient(135deg, #1a1a1a 0%, #0d2326 100%);
    color: white;
    min-height: 100vh; /* Full viewport height */
    display: flex;
    align-items: center;
    overflow: hidden;
    padding: 0; /* Remove padding */
  }

  .split-layout {
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 2rem;
    align-items: center;
    height: 100%;
  }

  .hero-content {
    text-align: left;
    padding: 2rem;
    max-width: 600px;
  }

  .animation-container {
    height: 100%;
    position: relative;
  }

  .hero-background {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    opacity: 0.4;
  }

  .hero::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background: 
      radial-gradient(circle at 75% 50%, rgba(80, 185, 198, 0.15) 0%, transparent 50%);
    pointer-events: none;
  }

  .hero h1 {
    font-size: 3.5rem;
    margin-bottom: 1.5rem;
    line-height: 1.2;
    background: linear-gradient(135deg, #ffffff 0%, #50B9C6 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    animation: glow 3s ease-in-out infinite alternate;
  }

  .hero p {
    font-size: 1.3rem;
    margin-bottom: 2rem;
    max-width: 600px;
    opacity: 0.9;
    text-shadow: 0 0 20px rgba(80, 185, 198, 0.3);
  }

  @keyframes glow {
    from {
      text-shadow: 0 0 20px rgba(80, 185, 198, 0.3);
    }
    to {
      text-shadow: 0 0 30px rgba(80, 185, 198, 0.8);
    }
  }

  @media (max-width: 768px) {
    .split-layout {
      grid-template-columns: 1fr;
    }

    .hero-content {
      text-align: center;
      padding: 2rem 1rem;
    }

    .animation-container {
      display: none; /* Hide animation on mobile */
    }
  }
</style>